rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to write/read their own receipt files.
    // Allow admins (defined in Realtime DB) to read all receipts.
    match /receipts/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        root.child("users").child(request.auth.uid).child("isAdmin").val() == true
      );
    }
  }
}
